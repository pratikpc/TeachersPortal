<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./partials/head.ejs') %>
  <link href="/css/custom.css" rel="stylesheet">
</head>

<body id="page-top" >

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
      <%- include ('./partials/navbar.ejs') %>
  </nav>
  <div class="container-fluid p-0" style="width:69%;margin-right:10%;">
    <section class=" p-lg-4 " id="update">
      <form method="POST" action="/semwork" enctype="multipart/form-data">
        <div class="my-auto item" id="documents">
          
        <h4 style="color:black;font-size:35px;margin-left:40%;"> Seminar / Workshop  </h4>
        </br>
        <input id="id" name="id" type="hidden" value="<%- id %>">
        <label> Category </label></br>
        <select id="swtype" name="swtype" style="width: 25%;padding:5px;">
        <option value="Workshop" <%= swtype == 'Workshop' ? 'selected' : '' %> > Workshop </option>
        <option value="Seminar" <%= swtype == 'Seminar' ? 'selected' : '' %> > Seminar </option>
        </select>
        </br>

        <label > Date</label></br>
        <input id="swdate" type="text" name="swdate" value="<%- swdate %>" style="width:24%;padding:5px;"/></br>
        
        <label > Title</label></br>
        <input id="swt" type="text" name="swt" value="<%- swt %>"/>

        <label > College  </label></br>
        <input id="swcol" type="text" name="swcol" value="<%- swcol %>"/>   

        <label > No of Days </label></br>
        <input id="swnd" type="text" name="swnd" value="<%- swnd %>"/>
        
        <label> Upload Certificate </label></br>
        <div class="fallback">
        <input name="swcerti" type="file" multiple id="swcerti" value="" />
        </div>

    </div>
      <button class="btn btn--radius-2 btn--red" type="submit"> Upload </button>
    </div>
  </form>
  </section>
  </div>
   
  <%- include ('./partials/bootjs.ejs') %>
  <script>
    $( function() {
      $( "#swdate" ).datepicker();
    } );
    </script>
  <script src="js/dropzone.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>

</html>