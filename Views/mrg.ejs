<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head.ejs %>
  <link href="css/custom.css" rel="stylesheet">
</head>

<body id="page-top" >

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
      <% include ./partials/navbar %>
  </nav>
  <div class="container-fluid p-0" style="width:69%;margin-right:10%;">
    <section class=" p-lg-4 " id="update">
      <br method="POST" action="/mrg" enctype="multipart/form-data">
        <div class="my-auto item" id="documents">
          
        </br><h4> Research & Development / Consultancy  </h4>
        </br>
        <input id="id" name="id" type="hidden" value="<%- id %>">
       
        <label> Category </label></br>
        <select id="mrgcat" name="mrgcat" style="width: 24%;padding:5px;">
        <option value="<%- mrgcat %>" selected= "selected" >Select One</option>
        <option value="Research & Development" > Research & Development </option>
        <option value="MRG" > MRG </option>
        <option value="Consultancy" > Consultancy </option>
        </select>
        </br>

        <label > Year Approved</label></br>
        <select id="mrgya" type="text" name="mrgya" value="<%- mrgya %>" style="width: 24%;padding:5px;"/></br>
        
        <label > Title</label></br>
        <input id="mrgt" type="text" name="mrgt" value="<%- mrgt %>"/>

        <label > Authority Approved </label></br>
        <input id="mrgauth" type="text" name="mrgauth" value="<%- mrgauth %>"/>

        <label > Grant Approved </label></br>
        <input id="mrgga" type="text" name="mrgga" value="<%- mrgga %>"/>

        <label> Upload Certificate </label></br>
        <div class="fallback">
        <input name="mrgcerti" type="file" multiple id="mrgcerti" value="" />
        </div>

        <label> Upload Report </label></br>
        <div class="fallback">
        <input name="mrgr" type="file" multiple id="mrgr" value="" />
        </div>

    </div>
      <button class="btn btn--radius-2 btn--red" type="submit"> Upload </button>
    </div>
  </form>
  </section>
  </div>
   
  <% include ./partials/bootjs %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script>
    var end = 1900;
    var start = new Date().getFullYear();
    var options = "";
    for(var year = start ; year >=end; year--){
          options += "<option>"+ year +"</option>";
      }
    document.getElementById("mrgya").innerHTML = options;
   </script>
</body>

</html>