<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./partials/head.ejs') %>
  <link href="/css/custom.css" rel="stylesheet">
</head>

<body id="page-top" >

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
      <%- include ('./partials/navbar.ejs') %>
  </nav>
  <div class="container-fluid p-0" style="width:69%;margin-right:10%;">
    <section class=" p-lg-4 " id="update">
      <form method="POST" action="/fdp" enctype="multipart/form-data">
        <div class="my-auto item" id="documents">
          
        <h4 style="color:black;font-size:35px;margin-left:30%;"> Faculty Development Program </h4>
        </br>
        <input id="id" name="id" type="hidden" value="<%- id %>">
        <label > Date </label></br>
        <input id="fdpdate" type="text" name="fdpdate" value="<%- fdpdate %>" style="width:24%;padding:5px;"/></br>

        <label> Sponsorship </label></br>
        <select id="fdptype" name="fdptype" style="width: 24%;padding:5px;">
       
        <option value="College Sponsored" <%= fdptype == 'College Sponsored' ? 'selected' : '' %> > College Sponsored </option>
        <option value="Self Sponsored" <%= fdptype == 'Self Sponsored' ? 'selected' : '' %> > Self Sponsored </option>
        </select>
        </br>
        
        <label > Title</label></br>
        <input id="fdpt" type="text" name="fdpt" value="<%- fdpt %>"/>

        <label > College </label></br>
        <input id="fdpcol" type="text" name="fdpcol" value="<%- fdpcol %>"/>

        <label > No. of Days </label></br>
        <input id="fdpnd" type="text" name="fdpnd" value="<%- fdpnd %>"/>

        <label> Upload Certificate </label></br>
        <div class="fallback">
        <input name="fdpcerti" type="file" multiple id="fdpcerti" value="" />
        </div>

    </div>
      <button class="btn btn--radius-2 btn--red" type="submit"> Upload </button>
    </div>
  </form>
  </section>
  </div>
   
  <%- include ('./partials/bootjs.ejs') %>
  <script>
    $( function() {
      $( "#fdpdate" ).datepicker();
    } );
    </script>
  <script src="/js/dropzone.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="//code.jquery.com/jquery-1.12.4.js"></script>
  <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>

</html>