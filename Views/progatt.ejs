<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./partials/head.ejs') %>
  <link href="/css/custom.css" rel="stylesheet">
</head>

<body id="page-top" >

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
      <%- include ('./partials/navbar.ejs') %>
  </nav>
  <div class="container-fluid p-0" style="width:69%;margin-right:10%;">
    <section class=" p-lg-4 " id="update">
      <form method="POST" action="/progatt" enctype="multipart/form-data">
        <div class="my-auto item" id="documents">
          
        <h4 style="color:black;font-size:35px;margin-left:40%;">Program Attended</h4>
        </br>
        <input id="id" name="id" type="hidden" value="<%- id %>" />
        <label> Program Type </label></br>
        <select id="patype" name="patype" style="width: 24%;padding:5px;">
        <option value="Faculty Development Program" <%= patype == 'Faculty Development Program' ? 'selected' : '' %> > Faculty Development Program </option>
        <option value="Short Term Training Program" <%= patype == 'Short Term Training Program' ? 'selected' : '' %> > Short Term Training Program </option>
        <option value="Seminars " <%= patype == 'Seminars ' ? 'selected' : '' %> > Seminars  </option>
        <option value="Workshops" <%= patype == 'Workshops' ? 'selected' : '' %> > Workshops </option>
        </select>
        </br>

        <label > Program Date </label></br>
        <input id="patdate" type="text" name="patdate" value="<%- patdate %>" style="width: 24%;padding:5px;"/></br>

        <label> Sponsorship </label></br>
        <select id="patspon" name="patspon" style="width: 24%;padding:5px;">
          <option value="College Sponsored" <%= patspon == 'College Sponsored' ? 'selected' : '' %> > College Sponsored </option>
          <option value="Self Sponsored" <%= patspon == 'Self Sponsored' ? 'selected' : '' %> > Self Sponsored </option>
        </select>
        </br>
        
        <label > Program Title </label></br>
        <input id="pat" type="text" name="pat" value="<%- pat %>"/>

        <label > College </label></br>
        <input id="patcol" type="text" name="patcol" value="<%- patcol %>"/>

        <label > No. of Days </label></br>
        <input id="patnd" type="text" name="patnd" value="<%- patnd %>"/>
        
        <label> Upload Certificate </label></br>
        <div class="fallback">
        <input name="patcerti" type="file" multiple id="patcerti" value="" />
        </div>

    </div>
      <button class="btn btn--radius-2 btn--red" type="submit"> Upload </button>
    </div>
  </form>
  </section>
  </div>
   
  <%- include ('./partials/bootjs.ejs') %>
  <script>
    $( function() {
      $( "#patdate" ).datepicker();
    } );
    </script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="//code.jquery.com/jquery-1.12.4.js"></script>
  <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>

</html>