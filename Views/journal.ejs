<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./partials/head.ejs') %>
  <link href="css/custom.css" rel="stylesheet">
</head>

<body id="page-top" >

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
      <%- include ('./partials/navbar.ejs') %>
  </nav>
  <div class="container-fluid p-0" style="width:69%;margin-right:10%;">
    <section class=" p-lg-4 " id="update">
      <form method="POST" action="/journal" enctype="multipart/form-data">
        <div class="my-auto item" id="documents">
          
        <h4 style="color:black;font-size:35px;margin-left:50%;">Journal</h4>
        </br>
        <input id="id" name="id" type="hidden" value="<%- id %>">
        <label > Journal Date </label></br>
        <input id="jdate" type="text" name="jdate" value="<%- jdate %>" style="width:24%;padding:5px;"/></br>
        
        <label > Journal Title</label></br>
        <input id="jt" type="text" name="jt" value="<%- jt %>"/>

        <label > Research Title</label></br>
        <input id="jrpt" type="text" name="jrpt" value="<%- jrpt %>"/>

        <label> International / National </label></br>
        <select id="ji" name="ji" style="width: 25%;padding:5px;">
          <option value="Inter" <%= ji == 'Inter' ? 'selected' : '' %> > International </option>
          <option value="Nat" <%= ji == 'Nat' ? 'selected' : '' %> > National </option>
        </select>
        </br>

        <label> Main Author </label></br>
        <select id="jma" name="jma" style="width: 25%;padding:5px;">
          <option value="Yes" <%= jma == 'Yes' ? 'selected' : '' %> > Yes </option>
          <option value="No" <%= jma == 'No' ? 'selected' : '' %> > No </option>
        </select>
        </br>

        <label > ISSN Number </label></br>
        <input id="jissn" type="text" name="jissn" value="<%- jissn %>"/>

        <label > DUI </label></br>
        <input id="jdui" type="text" name="jdui" value="<%- jdui %>"/>
        
        <label>Upload Certificate</label></br>
        <div class="fallback">
        <input name="jcerti" type="file" multiple id="jcerti" value="" />
        </div>

    </div>
      <button class="btn btn--radius-2 btn--red" type="submit"> Upload </button>
    </div>
  </form>
  </section>
  </div>
   
  <%- include ('./partials/bootjs.ejs') %>
  <script>
    $( function() {
      $( "#jdate" ).datepicker();
    } );
    </script>
  <script src="js/dropzone.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>

</html>