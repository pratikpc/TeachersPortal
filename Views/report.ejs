    var end = 1900;
    var start = new Date().getFullYear();
    var options = "";
    options += "<option value=\"\">" + "All" + "</option>"
    for (var year = start; year >= end; year--) {
      options += "<option value=\"" + year + "\">" + year + "</option>";
